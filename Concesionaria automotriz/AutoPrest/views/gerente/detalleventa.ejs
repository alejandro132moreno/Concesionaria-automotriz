<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de Venta</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="contenedor">
        <%- include('../layout/nav_gerente.ejs') %>

        <main class="container my-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Detalle de Venta #<%= venta.id %></h1>
                <a href="/gerente/detalleventa" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card card-detalle mb-4">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">Información del Vehículo</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">Marca:</div>
                                <div class="col-8"><%= venta.Marca %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">Modelo:</div>
                                <div class="col-8"><%= venta.Modelo %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">Año:</div>
                                <div class="col-8"><%= venta.Anio %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">Precio:</div>
                                <div class="col-8">$<%= venta.Precio.toLocaleString() %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">Color:</div>
                                <div class="col-8"><%= venta.Color %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">Kilometraje:</div>
                                <div class="col-8"><%= venta.Kilometraje.toLocaleString() %> km</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card card-detalle mb-4">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">Información del Comprador</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">Nombre:</div>
                                <div class="col-8"><%= venta.comprador_nombre %> <%= venta.comprador_apellidos %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">Teléfono:</div>
                                <div class="col-8"><%= venta.comprador_telefono %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">Correo:</div>
                                <div class="col-8"><%= venta.comprador_correo %></div>
                            </div>
                        </div>
                    </div>

                    <div class="card card-detalle">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">Detalles de la Transacción</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">Fecha:</div>
                                <div class="col-8"><%= new Date(venta.fecha_compra).toLocaleString() %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">ID Venta:</div>
                                <div class="col-8"><%= venta.id %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-4 fw-bold">ID Vehículo:</div>
                                <div class="col-8"><%= venta.vehiculo_id %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../layout/footer.ejs') %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>