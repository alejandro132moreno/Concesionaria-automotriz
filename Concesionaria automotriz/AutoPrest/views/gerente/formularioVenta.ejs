<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- FAVICON -->
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon/favicon-16x16.png">
    <link rel="manifest" href="/assets/favicon/site.webmanifest">

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="/css/styles.css">

    <!-- BOOTSTRAP ICONS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="contenedor">
        <%- include('../layout/nav_gerente.ejs') %>

            <!-- Mostrar formulario solo si hay un auto seleccionado -->
            <% if (vehiculo) { %>
                <h2>Registrar Venta</h2>
                <div class="card">
                    <div class="card-body">
                        <p><strong>Vehículo:</strong> <%= vehiculo.Marca %> <%= vehiculo.Modelo %></p>
                        <p><strong>Precio:</strong> $<%= vehiculo.Precio.toLocaleString() %></p>
                        
                        <form method="POST" action="/gerente/catalogoventa/<%= vehiculo.id %>">
                        
                            <div class="row mb-2">
                           
                            <div class="col">
                                <input class="form-control" type="text" name="comprador_nombre" placeholder="Nombre del comprador" required>
                            </div>
                            <div class="col">
                                <input class="form-control" type="text" name="comprador_apellidos" placeholder="Apellidos del comprador" required>
                            </div>

                        </div>
                        <div class="row mb-2">
                            <div class="col">
                                <input class="form-control" type="text" name="comprador_telefono" placeholder="Teléfono" required>
                            </div>
                            <div class="col">
                                <input class="form-control" type="email" name="comprador_correo" placeholder="Correo electrónico" required>
                            </div>
                        </div>
                        <% if (vehiculo.TelefonoVendedor) { %>
                            <a href="https://wa.me/+52<%= vehiculo.TelefonoVendedor.replace(/\D/g, '') %>?text=Su auto fue vendido, por favor de pasar dentro de 3 días." 
                        
                                target="_blank"
                                rel="noopener noreferrer">
                                <button class="btn btn-success">Notificar por WhatsApp</button>
                            </a>
                        <% } %>
                        
                      
                    
                    
                    </div>
                </div>
            <% } else { %>
                <div class="alert alert-danger">No se ha seleccionado ningún vehículo</div>
            <% } %>
                 <!-- Cambia esto en tu archivo EJS -->

                    
                   


        <%- include('../layout/footer.ejs') %>
    </div>

    <!-- BOOTSTRAP SCRIPT -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>
